{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://s3-eu-west-1.amazonaws.com/dev-solutions/maic/demos/rh/dist/contentTypes/personalized-banner-slot.json",
  "title": "Personalized Slot",
  "description": "A Slot that can accept multiple content-types (banner, slider or video) for different segments",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "segment",
    "content"
  ],
  "type": "object",
  "properties": {
    "segments": {
      "type": "array",
      "title": "Content",

      "items": {
        "type": "object",
        "properties": {
          "segment": {
            "type": "string",
            "title": "Segment",
            "enum": [
              "bargain-hunter",
              "fashionista",
              "home-trendsetter",
              "globe-trotter"
            ]
          },
          "content": {
            "title": "Content",
            "allOf": [
              {
                "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
              },
              {
                "properties": {
                  "contentType": {
                    "title": "contentType",
                    "enum": [
                      "https://s3-eu-west-1.amazonaws.com/dev-solutions/maic/demos/rh/dist/contentTypes/banner.json"
                    ]
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}